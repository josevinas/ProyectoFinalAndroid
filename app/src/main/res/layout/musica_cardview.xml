<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cardView"
    android:layout_height="150dp"
    card_view:cardBackgroundColor="#00FFFFFF"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_cancion"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            card_view:srcCompat="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/tv_nombreCancion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@+id/img_cancion"
            android:fontFamily="@font/open_sans_bold"
            android:text="Nombre Canción"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_nombreCantante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nombreCancion"
            android:layout_alignStart="@id/tv_nombreCancion"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/open_sans_light"
            android:text="Nombre Cantante"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/tv_duracionCancion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nombreCantante"
            android:layout_alignStart="@id/tv_nombreCancion"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/open_sans_light"
            android:text="Duración"
            android:textColor="@android:color/background_dark" />

        <ImageView
            android:id="@+id/img_playCard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/img_cancion"
            android:scaleType="centerCrop"
            card_view:srcCompat="@android:drawable/ic_menu_gallery" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>